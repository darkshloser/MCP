# MCP Platform Configuration
# Copy this file to .env and fill in your values

# Environment
MCP_ENVIRONMENT=development
MCP_DEBUG=true
MCP_LOG_LEVEL=INFO

# LLM Configuration
LLM_PROVIDER=azure_openai  # azure_openai, openai, mock
LLM_MODEL=gpt-4
LLM_API_KEY=your-api-key-here
LLM_API_BASE=https://your-resource.openai.azure.com/
LLM_API_VERSION=2024-02-15-preview
LLM_DEPLOYMENT_NAME=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8001
MCP_SERVER_REQUIRE_AUTH=false
MCP_SERVER_ENABLE_AUDIT=true
MCP_SERVER_AUDIT_LOG_PATH=logs/audit.log

# Orchestrator Configuration
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_MCP_SERVER_URL=http://localhost:8001
ORCHESTRATOR_SECRET_KEY=change-me-in-production
ORCHESTRATOR_TOKEN_EXPIRE_MINUTES=60
ORCHESTRATOR_MAX_CONVERSATION_LENGTH=50
ORCHESTRATOR_CONVERSATION_TTL_MINUTES=60
